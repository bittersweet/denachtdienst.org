<% content_for :title, "Homepage" %>
<% content_for :meta, "Website van de Nachtdienst, een vriendengroep die veel bezig is met muziek" %>

<div id="user-container">
  <div id="user-wrapper">

  <% @user.each do |u| %>

    <div class="user">

      <h2><%= link_to(u.name, user_path(u)) %></h2>
      
      <div class="user-avatar"><%= image_tag u.avatar.url(:small) %></div>
      
      <p class="bio"><%= h(u.bio) %></p>
    
      <h4 class="track">Laatste track:</h4>
      <% if u.tracks.empty? %>
        <p class="last-track">Nog geen tracks</p>
      <% else %>
        <p class="last-track"><%= u.tracks.last.name %></p>
      <% end %>
  
    <p class="user-button">
      <%= link_to( "Luister tracks", u) %>
    </p>
  
    </div>

  <% end %>

  </div>
</div>

<div id="credits">
  <p>Volg ons op twitter: <a href="http://www.twitter.com/nachtdienst" title="">@nachtdienst</a> &mdash; een <a href="http://www.ikbenbitterzoet.com" title="ik ben Bitterzoet">Bitterzoet</a> productie</p>
</div>
