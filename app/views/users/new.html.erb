<div class="standard_form">
	<h1>Register</h1>
	<% @user.password = @user.password_confirmation = nil %>

	<% form_for :user, :html => { :multipart => true }, :url => users_path do |f| -%>
	<%= f.hidden_field :invitation_token %>

	<%= error_message_on "user", "name", :css_class => "formerror" %>

	<p><%= label_tag 'Displayname' %>
	<%= f.text_field :name %></p>
	
	<%= error_message_on "user", "login", :css_class => "formerror" %>

	<p><%= label_tag 'login' %>
	<%= f.text_field :login %></p>

	<%= error_message_on "user", "email", :css_class => "formerror" %>

	<p><%= label_tag 'email' %>
	<%= f.text_field :email %></p>

	<%= error_message_on "user", "avatar", :css_class => "formerror" %>
	
	<p><%= label_tag 'avatar' %>
	<%= f.file_field :avatar %>

	<%= error_message_on "user", "password", :css_class => "formerror" %>

	<p><%= label_tag 'password' %>
	<%= f.password_field :password %></p>

	<%= error_message_on "user", "password_confirmation", :css_class => "formerror" %>

	<p><%= label_tag 'password_confirmation', 'Confirm Password' %>
	<%= f.password_field :password_confirmation %></p>

	<p><%= submit_tag 'Sign up' %></p>
	<% end -%>
</div>
