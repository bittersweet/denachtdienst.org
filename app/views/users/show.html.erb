<div id="title">
	<h2><%= @user.name %></h2>
</div>	

<div id="wrapper">
	<ul id="tracklist">
	<% @track.each do |t| %>
		<li><span class="informatie"><%= t.name %></span>
			<span class="meta"> 
			<% if logged_in? %>
				<% if current_user.id == @user.id %>
					<%= link_to 'link', t %> | <%= link_to 'delete', t, :confirm => 'Are you sure?', :method => :delete %>
			    <% end %>
			<% else %>
				<%= link_to 'link', t %>
			<% end %>		
			</span>
		</li>
	<% end %>
	</ul>

	<% if logged_in? %>
		<% if current_user.id == @user.id %>
			<%= link_to "Add track", :controller => "tracks", :action => "new" %>
		<% end %>
	<% end %>

</div>
