<%= content_for :title, "All tracks" %>

<div id="wrapper">
	
  <!-- <h1 class="introductie">We gaan hardt, met <strong>dt.</strong></h1> -->
	
	<script>
	
  jQuery(document).ready(function() {
    
    jQuery(".playlist li").click(function() {
      var id = jQuery(this).attr("id");
      jQuery.post("/tracks/" + id + "/playcount");
    });    
    
  });
	
	</script>
		
	<ul class="playlist">
	  <li id="intro">Nightshift baby!</li>
	<% @track.each do |t| %>
		<li id="<%= t.id %>"><%= link_to t.name, t.mp3.url %>
		</li>
	<% end %>
	</ul>	
</div>

<%= render "/tracks/pageplayer" %>

<%= render "/layouts/footer" %>
